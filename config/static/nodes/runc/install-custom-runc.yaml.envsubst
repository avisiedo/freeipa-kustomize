---
# https://github.com/openshift/machine-config-operator/tree/master/docs
apiVersion: machineconfiguration.openshift.io/v1
kind: MachineConfig
metadata:
  name: 99-install-custom-runc-${ROLE}
  labels:
    machineconfiguration.openshift.io/role: ${ROLE}
spec:
  config:
    ignition:
      version: "3.2.0"
    systemd:
      units:
      - name: "install-runc.service"
        enabled: true
        # For getting the logs run:
        # $ oc adm node-logs node/NODE -u install-runc
        contents: |
          [Unit]
          Description=Install custom runc
          # https://www.freedesktop.org/wiki/Software/systemd/NetworkTarget/
          After=network-online.target

          [Service]
          Type=oneshot
          ExecStart=bash -c 'rpm -q "$( rpm -q ${RPM_RUNC} )" || rpm-ostree override replace --reboot "${RPM_RUNC}"'

          [Install]
          WantedBy=multi-user.target
